<% if @post.errors.present? %>
  <ul id='error_explanation'>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @post, local: true, url: confirm_posts_path do |p| %>
  <% if @post.image? %>
    <%= image_tag @post.image.url, onClick:"$('#upfile').click()",id: :img_prev, width: '300px' %>
  <% else %>
    <%= image_tag "no_image.png", onClick:"$('#upfile').click()", id: :img_prev, width: '300px' %>
  <% end %>
  <div class='profile'>
    <%= p.file_field :image, style:"display:none;", id:"upfile"%>
    <%= p.hidden_field :image_cache %>
  </div>
  <div class='form-group'>
    <%= p.label :content %>
    <%= p.text_area :content, row: 5, class: 'form-control' %>
  </div>
  <%= p.submit '確認', class: 'btn btn-primary' %>
<% end %>

<%# 画像のプレビューを表示 %>
<script type="text/javascript">
  $(function() {
    function readURL(input) {
        if (input.files && input.files[0]) {
        var reader = new FileReader();
        reader.onload = function (e) {
    $('#img_prev').attr('src', e.target.result);
        }
        reader.readAsDataURL(input.files[0]);
        }
    }
    $("#upfile").change(function(){
        readURL(this);
    });
  });
</script>
