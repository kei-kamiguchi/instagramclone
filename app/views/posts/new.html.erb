<h1>新規作成</h1>

<%= form_with model: @post, local: true do |p| %>
  <div class='form-group'>
    <%= p.label :content %>
    <%= p.text_area :content, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= p.label :image %>
    <%= p.file_field :image, class: 'form-control' %>
    <%= p.hidden_field :image_cache %>
  </div>
  <%= p.submit nil, class: 'btn btn-primary' %>
<% end %>
