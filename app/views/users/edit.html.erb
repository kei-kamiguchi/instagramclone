<% if @user.errors.present? %>
  <ul id='error_explanation'>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user, local: true do |u| %>
  <% if @user.image? %>
    <%= image_tag @user.image.url, onClick:"$('#upfile').click()"  %>
  <% else %>
    <%= image_tag "no_image.png", onClick:"$('#upfile').click()" %>
  <% end %>
  <div class='profile'>
    <%= u.file_field :image, style:"display:none;", id:"upfile"%>
  </div>
  <div class='form-group'>
    <%= u.label :name %>
    <%= u.text_field :name, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= u.label :email %>
    <%= u.text_field :email, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= u.label :password %>
    <%= u.password_field :password, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= u.label :password_confirm %>
    <%= u.password_field :password_confirm, class: 'form-control' %>
  </div>
  <%= u.submit nil, class: 'btn btn-primary' %>
<% end %>
