<!DOCTYPE html>
<html>
  <head>
    <title>Instaclone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class='navbar md-3 ml-5'>
      <div class='navbar-brand'>
        <%= image_tag 'insta.logo.jpg', width: '400px' %>
      </div>

      <ul class='navbar-nav ml-auto'>
        <% if logged_in? %>
          <li class='nav-item'><%= link_to 'マイプロフィール', @current_user, class: 'nav-link' %></li>
          <li class='nav-item'><%= link_to 'お気に入り', favorites_path, class: 'nav-link' %></li>
          <li class='nav-item'><%= link_to '作成', new_post_path, class:  'nav-link' %></li>
          <li class='nav-item'><%= link_to '投稿一覧', posts_path, class: 'nav-link' %></li>
          <li class='nav-item'><%= link_to 'ユーザー一覧', users_path, class: 'nav-link' %></li>
          <li class='nav-item'><%= link_to 'ログアウト', session_path(current_user.id), method: :delete, class: 'nav-link' %></li>
        <% else %>
          <li class='nav-item'><%= link_to 'アカウント登録', new_user_path, class: 'nav-link' %></li>
          <li class='nav-item'><%= link_to 'ログイン', new_session_path, class: 'nav-link' %></li>
        <% end %>
      </ul>
    </nav>
    <div class='container'>
      <% if flash[:notice] %>
        <div class='alert alert-warning' role='alert'>
          <%= flash[:notice] %>
        </div>
      <% end %>
      <%= yield %>
    </div>
    <footer class='footer'>
      <div class='container text-center mt-3'>
        <p>Place sticky footer content here.</p>
      </div>
    </footer>
  </body>
</html>
